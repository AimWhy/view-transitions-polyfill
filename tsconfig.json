{
  "include": ["src/**/*"],
  "exclude": ["test/wpt/**/*"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES6",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true
  }
}
